<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===============================
         HERENCIA VISTA TICKET
    ================================ -->
    <record id="ticket_view_form_inherit_firma" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.firma</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">

                <!-- Botón Firmar -->
                <button name="%(action_firma_wizard)d"
                        string="Firmar"
                        type="action"
                        class="btn-primary"
                        context="{'default_ticket_id': active_id}"
                        groups="helpdesk.group_helpdesk_user"
                        attrs="{
                            'invisible': [('estado_firma', '=', 'firmado')]
                        }"/>

                <!-- Botón Enviar -->
                <button name="action_enviar_ticket"
                        string="Enviar Ticket"
                        type="object"
                        class="btn-success"
                        groups="helpdesk.group_helpdesk_user"
                        attrs="{
                            'invisible': [('estado_firma', '!=', 'firmado')]
                        }"/>

            </xpath>

            <!-- Campos técnicos ocultos -->
            <xpath expr="//sheet" position="inside">
                <group invisible="1">
                    <field name="estado_firma"/>
                    <field name="firma"/>
                </group>
            </xpath>

        </field>
    </record>


    <!-- ===============================
         ACTION WIZARD FIRMA
    ================================ -->
    <record id="action_firma_wizard" model="ir.actions.act_window">
        <field name="name">Firmar Ticket</field>
        <field name="res_model">helpdesk.firma.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>

        <!-- CONTEXTO CLAVE -->
        <field name="context">
            {'default_ticket_id': active_id}
        </field>
    </record>


    <!-- ===============================
         VISTA WIZARD FIRMA
    ================================ -->
    <record id="view_firma_wizard_form" model="ir.ui.view">
        <field name="name">helpdesk.firma.wizard.form</field>
        <field name="model">helpdesk.firma.wizard</field>
        <field name="arch" type="xml">

            <form string="Firmar Ticket">
                <group>
                    <field name="signature" widget="signature"/>
                    <field name="signed_by" readonly="1"/>
                    <field name="signed_on" readonly="1"/>
                </group>

                <footer>
                    <button name="action_confirm_firma"
                            string="Confirmar Firma"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>

        </field>
    </record>

</odoo>
