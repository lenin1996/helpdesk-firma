<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ticket_view_form_inherit_firma" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.inherit.firma</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_firma_wizard)d" string="Firmar" type="action" class="btn-primary" attrs="{'invisible': [('estado_firma','=', 'firmado')]}"/>
                <button string="Enviar Ticket" type="object" name="action_enviar_ticket" class="btn-success" attrs="{'invisible': [('estado_firma','!=','firmado')]}"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <field name="estado_firma" invisible="1"/>
                <field name="firma" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_firma_wizard" model="ir.actions.act_window">
        <field name="name">Firmar Ticket</field>
        <field name="res_model">helpdesk.firma.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_firma_wizard_form" model="ir.ui.view">
        <field name="name">helpdesk.firma.wizard.form</field>
        <field name="model">helpdesk.firma.wizard</field>
        <field name="arch" type="xml">
            <form string="Firmar Ticket">
                <group>
                    <field name="signature" widget="signature"/>
                    <field name="signed_by"/>
                    <field name="signed_on"/>
                </group>
                <footer>
                    <button name="action_confirm_firma" string="Confirmar Firma" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
