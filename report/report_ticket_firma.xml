<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="action_report_ticket_firma" model="ir.actions.report">
            <field name="name">Ticket con Firma</field>

            <!-- MODELO -->
            <field name="model">helpdesk.ticket</field>

            <!-- TIPO -->
            <field name="report_type">qweb-pdf</field>

            <!-- QWEB TEMPLATE -->
            <field name="report_name">helpdesk_firma.ticket_firma_template</field>
            <field name="report_file">helpdesk_firma.ticket_firma_template</field>

            <!-- NOMBRE DEL ARCHIVO -->
            <field name="print_report_name">
                "'Ticket_%s' % (object.name or object.id)"
            </field>

            <!-- ENTERPRISE BINDINGS -->
            <field name="binding_model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
