<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="email_template_ticket_firmado" model="mail.template">
        <field name="name">Ticket Firmado</field>
        <field name="model_id" ref="helpdesk_mgmt.model_helpdesk_ticket"/>
        <field name="subject">Ticket firmado: ${object.number}</field>
        <field name="email_from">${(user.email_formatted | safe) if user.email_formatted else ''}</field>
        <field name="email_to">${object.partner_id.email_formatted if object.partner_id else ''}</field>
        <field name="body_html"><![CDATA[
            <p>Estimado(a) ${object.partner_id.name},</p>
            <p>Su ticket <strong>${object.number}</strong> ha sido firmado.</p>
            <p>Adjuntamos el PDF con los detalles.</p>
        ]]></field>
    </record>
</odoo>
